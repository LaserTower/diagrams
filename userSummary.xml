<user>
	<!-- Базовые параметры тела -->
	<!-- 
             Height - рост в см
             Age - возраст в годах  
             Gender - пол: мужской/женский
             ActivityLevel - уровень физической активности:
                     - sedentary (малоподвижный) - офисная работа, минимум физической активности
                     - lightly_active (слабо активный) - легкие упражнения 1-3 раза в неделю
                     - moderately_active (умеренно активный) - умеренные упражнения 3-5 раз в неделю
                     - very_active (очень активный) - интенсивные упражнения 6-7 раз в неделю
                     - extremely_active (крайне активный) - очень интенсивные упражнения, физическая работа
             WorkType - тип работы: office/physical/mixed (офисная/физическая/смешанная)
             ExerciseFrequency - частота тренировок в неделю
             ExerciseType - тип упражнений: cardio/strength/mixed/yoga/swimming и т.д.
             ExerciseDuration - средняя продолжительность тренировки в минутах
       -->
	<BodyParameters>
		<Height unit="cm">165</Height>
		<Age unit="years">28</Age>
		<Gender>женский</Gender>
		<ActivityLevel>moderately_active</ActivityLevel>
		<WorkType>office</WorkType>
		<ExerciseFrequency unit="times_per_week">4</ExerciseFrequency>
		<ExerciseType>mixed</ExerciseType>
		<ExerciseDuration unit="minutes">45</ExerciseDuration>
		<Comment>Регулярные тренировки в зале, преимущественно силовые с кардио</Comment>
	</BodyParameters>
	<!-- Пожелания по питанию -->
	<!--
              DietType  - Тип питания: например, кето, веган, интервальное голодание 
              CalorieTarget - Цель по калориям в день 
              Macros - Цель по БЖУ (белки, жиры, углеводы) 
              AvoidFoods - Продукты, которых следует избегать (аллергии, непереносимость) 
              PreferredCuisines - Любимые кухни (для рецептов) 
              MealFrequency - Частота приёмов пищи 
              Comment - Дополнительные пожелания или примечания 
        -->
	<NutritionWish>
		<DietType>Средиземноморская диета</DietType>
		<CalorieTarget unit="kcal">1500</CalorieTarget>
		<Macros target_protein="100" target_fat="50" target_carbs="120"/>
		<AvoidFoods>Глютен, Молоко</AvoidFoods>
		<PreferredCuisines>Японская, Вьетнамская</PreferredCuisines>
		<MealFrequency>4 раза в день</MealFrequency>
		<Comment>Питаться регулярно, избегать перекусов вне графика</Comment>
	</NutritionWish>
	<!-- Цель по фигуре -->
	<!-- 
            TargetWeight - вес
            TargetWaistCircumference - Обхват талии
            TargetThighCircumference - Обхват бедер
       -->
	<GoalBody>
		<TargetWeight unit="kg">55</TargetWeight>
		<TargetWaistCircumference unit="cm">65</TargetWaistCircumference>
		<TargetThighCircumference unit="cm">90</TargetThighCircumference>
		<GoalDate>2025-12-31</GoalDate>
		<Comment>Достигнуть здорового веса и улучшить пропорции</Comment>
	</GoalBody>
	<!-- содержимое холодильника -->
	<Refrigerator>
		<RefrigeratorItem weight="200" expiry_date="23.07.2025" purchase_date="10.06.2025" perishable="true">Творог</RefrigeratorItem>
	</Refrigerator>
	<!-- кладовая/шкаф для продуктов -->
	<Pantry>
		<PantryItem weight="200" expiry_date="23.07.2025" purchase_date="10.06.2025" perishable="true">Гречневая крупа</PantryItem>
	</Pantry>
	<!-- История приёмов пищи -->
	<!-- 
            MealType - тип приёма пищи: завтрак, обед, ужин, перекус
            FoodItem - отдельный продукт или блюдо
        -->
	<MealHistory>
		<Meal date="2025-07-15" time="08:30" type="завтрак">
			<FoodItem quantity="150" unit="g">Овсяная каша</FoodItem>
			<FoodItem quantity="100" unit="g">Творог обезжиренный</FoodItem>
			<FoodItem quantity="50" unit="g">Ягоды черники</FoodItem>
		</Meal>
		<Meal date="2025-07-15" time="13:00" type="обед">
			<FoodItem quantity="120" unit="g">Куриная грудка</FoodItem>
			<FoodItem quantity="80" unit="g">Гречневая крупа</FoodItem>
			<FoodItem quantity="150" unit="g">Овощной салат</FoodItem>
			<FoodItem quantity="10" unit="ml">Оливковое масло</FoodItem>
		</Meal>
		<Meal date="2025-07-15" time="16:00" type="перекус">
			<FoodItem quantity="30" unit="g">Грецкие орехи</FoodItem>
			<FoodItem quantity="100" unit="g">Яблоко</FoodItem>
		</Meal>
	</MealHistory>
	<!-- История измерений -->
	<!-- 
            Weight - вес
            WaistCircumference - Обхват талии
            ThighCircumference - Обхват бедер
        -->
	<BodyMeasurementsHistory>
		<Measurement date="2025-04-15">
			<Weight unit="kg">57.7</Weight>
			<WaistCircumference unit="cm">70</WaistCircumference>
			<ThighCircumference unit="cm">57</ThighCircumference>
		</Measurement>
		<Measurement date="2025-04-29">
			<Weight unit="kg">57.5</Weight>
			<WaistCircumference unit="cm">69</WaistCircumference>
			<ThighCircumference unit="cm">56</ThighCircumference>
		</Measurement>
	</BodyMeasurementsHistory>
	<!-- История потребления БЖУ и калорий по дням -->
	<!-- 
             DayNutrition - данные за один день
             Date - дата в формате YYYY-MM-DD
             TotalCalories - общее количество калорий за день
             Protein - белки в граммах
             Fat - жиры в граммах
             Carbs - углеводы в граммах
             WaterIntake - потребление воды в мл (опционально)
             FiberIntake - потребление клетчатки в граммах (опционально)
             MealCount - количество приемов пищи за день
             SnackCount - количество перекусов за день
             Comment - комментарий о дне (самочувствие, особенности)
        -->
	<NutritionHistory>
		<DayNutrition date="2025-07-11">
			<Target>
				<TotalCalories unit="kcal">1500</TotalCalories>
				<Protein unit="g">100</Protein>
				<Fat unit="g">50</Fat>
				<Carbs unit="g">120</Carbs>
			</Target>
			<Actual>
				<TotalCalories unit="kcal">1680</TotalCalories>
				<Protein unit="g">115</Protein>
				<Fat unit="g">65</Fat>
				<Carbs unit="g">135</Carbs>
				<WaterIntake unit="ml">1500</WaterIntake>
				<FiberIntake unit="g">16</FiberIntake>
				<MealCount>3</MealCount>
				<SnackCount>3</SnackCount>
			</Actual>
			<Comment>Превышение по всем показателям, был день рождения у коллеги</Comment>
		</DayNutrition>
	</NutritionHistory>
</user>
